<%- include("includes/header"); -%>

    <div class="sisalto">
                <% if (ryhma) { %>                          <!-- tuoteryhmä on valittu -->
                    <h3 class="lomakeNimi">Tuoteryhmä</h3>
                    <%- include("includes/tuotteet") -%>    <!-- näytetään yhden ryhmän tuotteet -->
                    <a href="/varasto/" class="btn btn2">Sulje</a>
                <%} else {%>                                <!-- koko varaston tilanne -->
                    <h3 class="lomakeNimi">Varastotilanne</h3>
                    <% if (tuotteet.length>0) { %>
                        <%- include("includes/ryhmat") -%>      <!-- näytetään kaikki tuoteryhmät-->
                    <% } else { %>
                        <p> Tyhjä varasto, ei tuotteita.</p>    
                    <% }; %>
                    <a href="/" class="btn btn2">Sulje</a>
                <% } %>
    </div>

